<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Design" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="btn_text_font" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/audiowide</item>
    </style>

    <style name="text_edit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/convergence</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="collapsing_text_edit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/audiowide</item>
        <item name="android:textColor">#1C8D80</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="font_get_started" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/audiowide</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="home_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/audiowide</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="account_texts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/convergence</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="generals" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/convergence</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="personal_information_main_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/convergence</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/peronal_inormation_text_layout</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="personal_inf_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/convergence</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="button_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/convergence</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.NavMenuExp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="alertDialogTextTitle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/allerta</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="alertDialogText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/convergence</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="fav_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/baseline_saved_search_24</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

</resources>