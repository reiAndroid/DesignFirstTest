<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/acc_status_recycler"
    android:background="#403E3E">

    <RelativeLayout
        android:id="@+id/text_information_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/information_text_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:paddingStart="5dp"
            android:paddingEnd="2dp"
            android:text="Text Information"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>