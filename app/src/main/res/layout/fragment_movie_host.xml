<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/movieHost"
    tools:context=".MovieHost">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_movie_database"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/movie_title_databse" />

    <Button
        android:id="@+id/add_new_movie_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Add new movie"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_movie_database"
        app:layout_constraintEnd_toEndOf="@+id/recycler_movie_database"
        app:layout_constraintStart_toStartOf="@+id/recycler_movie_database" />


</androidx.constraintlayout.widget.ConstraintLayout>